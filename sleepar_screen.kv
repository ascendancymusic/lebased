<SleeparScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'gradient.jpg'
    BoxLayout:
        orientation: 'vertical'
        MDFlatButton:
            text: "< Back"
            theme_text_color: "Custom"
            text_color: (1, 1, 1, 1)
            md_bg_color: (0, 0.169, 0.357, 1)
            size_hint: None, None
            size: 100, 50
            font_name: "Tex"
            pos_hint: {'x': 0, 'y': 1}
            on_release: root.manager.current = 'main'
            elevation: 100  # Adjust the shadow elevation here
        Label:
            text: "Sleepar"
            font_size: '24sp'
            font_name: "TexBold"
            bold: True
            size_hint: 1, 0.1
            color: 1, 1, 1, 1
        Label:
            id: current_time_label
            font_size: '20sp'  # Adjusted font size
            font_name: "Tex"
            size_hint: 1, 0.1
            color: 1, 1, 1, 1
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'y': 0.6}  # Adjusted y-position here
        BoxLayout:
            padding: [20, 0]
            MDRoundFlatButton:
                id: sleep_button
                text: "Sleep Button"
                font_name: "Tex"
                pos_hint: {'x': 0.5, 'y': 0.5}
                size_hint: 0.5, 0.1
                width: dp(200)  # Adjust the width as needed
                height: dp(40)  # Adjust the height as needed
                elevation_normal: 8
                md_bg_color: (0.341, 0.773, 0.714, 1)  # Background color
                text_color: (1, 1, 1, 1)  # White text color
                line_color: (1, 1, 1, 1)  # White outline color
                on_release: root.show_cleanar_options()
            MDRoundFlatButton:
                id: get_up_button
                text: "Get Up"
                font_name: "Tex"
                pos_hint: {'x': 0.5, 'y': 0.5}
                size_hint: 0.5, 0.1
                width: dp(200)  # Adjust the width as needed
                height: dp(40)  # Adjust the height as needed
                elevation_normal: 8
                md_bg_color: (0.341, 0.773, 0.714, 1)  # Background color
                text_color: (1, 1, 1, 1)  # White text color
                line_color: (1, 1, 1, 1)  # White outline color
                on_release: root.get_up_pressed()
        MDTextField:
            id: dream_input
            hint_text: "Write about your dream(s)"
            helper_text: "Or leave empty if no dreams"
            helper_text_color_focus: (0.082, 0.596, 0.584)
            font_name: "Tex"
            font_name_helper_text: "Tex"
            font_name_hint_text: "Tex"
            font_name_max_length: "Tex"
            mode: "fill"
            helper_text_mode: "on_focus"
            line_color_focus: 1, 1, 1, 1
            text_color_focus: (0, 0.169, 0.357)
            size_hint: 1, 0.1
            opacity: 1 if root.text_input_visible else 0
            pos_hint: {'center_x': 0.5, 'y': 0.35}  # Adjusted y-position here
            foreground_color: 1, 1, 1, 1
        MDRoundFlatButton:
            text: "Done"
            size_hint: None, None
            text_color: (1, 1, 1, 1)
            line_color: (1, 1, 1, 1)
            size: dp(100), dp(40)
            font_name: "Tex"
            pos_hint: {'center_x': 0.5, 'y': 0.2}  # Adjusted y-position here
            opacity: 1 if root.done_button_visible else 0
            on_release:
                root.text_input_visible = False
                root.done_button_visible = False
                root.done_button_pressed()
        Label:
            id: cleanar_label
            text: "Cleanar?"
            font_size: '16sp'
            font_name: "Tex"
            bold: True
            size_hint: 1, 0.1
            opacity: 0
            color: 1, 1, 1, 1
        BoxLayout:
            id: cleanar_options
            orientation: 'horizontal'
            size_hint: 1, 0.1
            opacity: 0
            Button:
                text: "Ofc"
                size_hint_x: 0.2
                size_hint_y: None
                font_name: "Tex"
                height: dp(40)  # Adjust the height as needed
                border_radius: [15]
                background_color: 0.082, 0.596, 0.584, 1  # Light gray background
                on_release: root.on_cleanar_button_press("ofc")

            Button:
                text: "No, coomed for Satan"
                size_hint_x: 0.2
                size_hint_y: None
                font_name: "Tex"
                height: dp(40)  # Adjust the height as needed
                border_radius: [15]
                background_color: 0.082, 0.596, 0.584, 1  # Light gray background
                on_release: root.on_cleanar_button_press("no")