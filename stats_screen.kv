<StatsScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'gradient.jpg'
    BoxLayout:
        orientation: 'vertical'
        MDFlatButton:
            text: "< Back"
            theme_text_color: "Custom"
            text_color: (1, 1, 1, 1)
            md_bg_color: (0, 0.169, 0.357, 1)
            size_hint: None, None
            size: 100, 50
            font_name: "Tex"
            pos_hint: {'x': 0, 'y': 1}
            on_release: root.manager.current = 'main'
            elevation: 100  # Adjust the shadow elevation here
        Label:
            text: "Stats"
            font_size: '24sp'
            font_name: "TexBold"
            bold: True
            size_hint: 1, 0.1
            color: 1, 1, 1, 1
        MDIconButton:
            icon: "delete"
            pos_hint: {"right": 1}
            on_release: root.show_delete_confirmation_dialog()
            theme_text_color: "Custom"
            text_color: (1, 1, 1, 1)  # White color
        ScrollView:
            MDLabel:
                id: stats_label
                font_name: "Tex"
                font_size: '20sp'
                text: ""
                size_hint_y: None
                height: self.texture_size[1]
                markup: True
                text_color: (1, 1, 1, 1)
                on_kv_post:
                    root.get_stats_text()
        Label:
            text: f"[font=Tex]Average Get Up Time:[/font] {root.average_get_up_time}\n[font=Tex]Average Sleep Time:[/font] {root.average_sleep_time}"
            font_size: '16sp'
            font_name: "TexBold"
            size_hint_y: 0.1
            color: 1, 1, 1, 1
            markup: True