<PlannerScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'gradient.jpg'
    BoxLayout:
        orientation: 'vertical'
        MDFlatButton:
            text: "< Back"
            theme_text_color: "Custom"
            text_color: (1, 1, 1, 1)
            md_bg_color: (0, 0.169, 0.357, 1)
            size_hint: None, None
            size: 100, 50
            font_name: "Tex"
            pos_hint: {'x': 0, 'y': 1}
            on_release: root.manager.current = 'main'
            elevation: 100  # Adjust the shadow elevation here
        Label:
            text: "Planner"
            font_size: '24sp'
            font_name: "TexBold"
            bold: True
            size_hint: 1, 0.1
            color: 1, 1, 1, 1